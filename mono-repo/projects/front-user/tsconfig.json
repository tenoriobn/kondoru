{
  "extends": "@kondoru/tsconfig-commons/tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "next.config.js", 
    "src/store/atom.ts"  
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "public/*": ["public/*"],
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "features/*": ["src/features/*"],
      "Home/*": ["src/features/Home/*"],
      "pages/*": ["src/pages/*"],
    },  
  }
}
